<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/metropolis_medium</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipIconTint">@color/cultured</item>
        <item name="chipBackgroundColor">@drawable/topic_selection_chip</item>
        <item name="fontFamily">@font/metropolis_medium</item>
        <item name="android:fontFamily">@font/metropolis_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/selection_chip_text_color</item>
        <item name="rippleColor">@color/github_blue</item>
        <item name="singleSelection">true</item>
        <item name="selectionRequired">true</item>
        <item name="checkedIconVisible">false</item>
    </style>
</resources>